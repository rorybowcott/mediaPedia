{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "productName": "MediaPedia",
  "version": "0.1.0",
  "identifier": "com.bowcott.mediapedia",
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "MediaPedia",
        "width": 750,
        "height": 470,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "backgroundColor": "#00000000"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:mediapedia.db"]
    }
  }
}
